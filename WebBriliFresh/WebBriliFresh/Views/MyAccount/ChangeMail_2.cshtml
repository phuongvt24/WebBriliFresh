@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mã xác minh</title>
    <link rel="stylesheet" href="~/HomeAssets/asset/fonts/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/HomeAssets/asset/base.css" />
    <link rel="stylesheet" href="~/HomeAssets/homeheadermain.css" />
    <link rel="stylesheet" href="~/HomeAssets/HomeFooter.css" />
    <link rel="stylesheet" href="~/MyAccountAssets/MyAccount/MyAccountMain.css" />

    <link rel="stylesheet" href="~/MyAccountAssets/ChangeMail/ChangeMail_2.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css" integrity="sha512-17egcferpgzkcm0j0feq1ycjuyawdz9kutv1ejvuaoz8pdnh/0nzxmu6bbxwaaxqoi9pqxnrwqlcdb027hgv9a==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css" integrity="sha512-yhknp1/awr+yx26cb1y0cjvqumvea2pfzt1c9lls4prq5notzfwbhbig+x9g9eyw/8m0/4oxnx8pxj6z57x0dw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
</head>
<body>
    @await Html.PartialAsync("~/Views/Shared/_HomeHeaderPartialView_login.cshtml")

    <!-- Begin content -->
    <div class="container">
        <div class="row" id="AccountInfo">

            <section class="directory mt-3">
                <nav class="navbar navbar-expand-xl navbar-light ">
                    <div class="container-fluid">
                        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a href="#">Thông tin tài khoản</a></li>
                                <li class="breadcrumb-item"><a href="#">Cập nhật địa chỉ Email</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Mã xác minh</li>
                            </ol>
                        </nav>
                    </div>
                </nav>
            </section>

            @await Html.PartialAsync("~/Views/Shared/_SubNavPartialView.cshtml")
            <!-- End SlideBar -->

            <div class="col-12 col-xl-9 container-right">
                <div class="heading-right">Mã xác minh</div>
                <form action="" class="form-validate-email">
                    <div class="form-return">
                        <a onclick='window.location = "@Url.Action("ChangeMail_1", "MyAccount")"'><i class="ti-arrow-left"></i></a>
                    </div>
                    <div class="form-header">Vui lòng nhập mã xác minh</div>
                    <div class="form-body">
                        <p>Mã xác minh đã được gửi đến Email</p>
                        <p id="email-input">thanhphuong@gmail.com</p>
                        <div><input type="text" name="" id="validate-email" placeholder="Nhập mã xác minh"></div>
                        <div><span>Bạn chưa nhận được code? </span><a class="btn-shared">Gửi lại</a></div>
                    </div>
                    <div class="form-footer">
                        <a onclick='window.location = "@Url.Action("ChangeMail_3", "MyAccount")"' id="btn-validate">Tiếp theo</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/_FooterPartialView.cshtml")
    <script type="text/javascript" src="~/MyAccountAssets/MyAccount/SubNavSide.js"></script>
</body>
</html>