@model IEnumerable<WebBriliFresh.Models.Order>

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý đơn hàng</title>


    <link href="~/adminassets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/HomeAssets/asset/fonts/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/HomeAssets/asset/base.css" />
    <link rel="stylesheet" href="~/HomeAssets/homeheadermain.css" />
    <link rel="stylesheet" href="~/HomeAssets/HomeFooter.css" />
    <link rel="stylesheet" href="~/MyAccountAssets/MyAccount/MyAccountMain.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css" integrity="sha512-17egcferpgzkcm0j0feq1ycjuyawdz9kutv1ejvuaoz8pdnh/0nzxmu6bbxwaaxqoi9pqxnrwqlcdb027hgv9a==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css" integrity="sha512-yhknp1/awr+yx26cb1y0cjvqumvea2pfzt1c9lls4prq5notzfwbhbig+x9g9eyw/8m0/4oxnx8pxj6z57x0dw==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <link rel="stylesheet" href="~/MyAccountAssets/ManageOrder/ManageOrder.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
</head>
<body>
    <!-- Begin header -->
    @await Html.PartialAsync("~/Views/Shared/_HomeHeaderPartialView_login.cshtml")
    <!-- End header -->
    <!-- Begin content -->
    <div class="container">
        <div class="row">
            <section class="directory mt-3">
                <nav class="navbar navbar-expand-xl navbar-light ">
                    <div class="container-fluid">
                        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                                <li class="breadcrumb-item active" id="ManageOrder" aria-current="page">Quản lý đơn hàng</li>
                            </ol>
                        </nav>
                    </div>
                </nav>
            </section>

            @await Html.PartialAsync("~/Views/Shared/_SubNavPartialView.cshtml")
            <!-- End SlideBar -->

            <div class="col-12 col-xl-9 container-right">
                <div class="heading-right">Quản lý đơn hàng</div>
                <div class="right-content">
                    <div id="subnav">
                        <ul class="subnav-order">
                            <li><a class="active" href="#">Tất cả đơn</a></li>
                            <li><a href="#">Chờ thanh toán</a></li>
                            <li><a href="#">Đang xử lý</a></li>
                            <li><a href="#">Đang vận chuyển</a></li>
                            <li><a href="#">Đã giao</a></li>
                            <li><a href="#">Đã hủy</a></li>
                        </ul>
                    </div>

                    <div id="order-search">
                        <i class="ti-search"></i>
                        <input type="search" id="search-ord-input" placeholder="Tìm đơn hàng theo Mã đơn hàng, Nhà cung cấp hoặc Tên sản phẩm">
                        <input type="submit" id="search-ord-btn" value="Tìm đơn hàng">
                    </div>

               
                    @{
                        foreach (Order order in @Model)
                        {
                            if (order.Status == 1)
                            {
                                <!-- Đơn hàng đang xử lý -->
                                <div class="processing-order order-info mt-3">
                                    <div class="header-order">
                                        <span><i class="ti-home"></i> BriliFresh</span>
                                        <span><i class="ti-timer"></i> Đang xử lý</span>
                                    </div>
                                    <div class="content-order">
                                        <div class="img-product"><img src="./assets/image/item_1.jpg" alt=""></div>
                                        <div class="product-info">
                                            <p class="name">Ba rọi heo (Nhập khẩu)</p>
                                            <p style="color: #757575;">Đơn vị: <span class="mass">500g</span></p>
                                        </div>
                                        <div class="purchase-info unit-price">Đơn giá: <span>80,000</span></div>
                                        <div class="purchase-info quantity">Số lượng: <span>2</span></div>
                                        <div class="purchase-info amount">Thành tiền: <span>160,000</span></div>
                                    </div>
                                    <p>Tổng tiền: <b><span class="total-order">160,000</span></b></p>
                                    <div class="footer-order">
                                        <a class="btn-shared order-info-btn" href="#">Xem chi tiết</a>
                                    </div>
                                </div>
                            }
                            else if (order.Status == 2)
                            {
                                <!-- Đơn hàng giao thành công -->
                                <div class="sucess-order order-info mt-3">
                                    <div class="header-order">
                                        <span><i class="ti-home"></i> JFruit</span>
                                        <span><i class="ti-truck"></i> Đã giao</span>
                                    </div>
                                    <div class="content-order">
                                        <div class="img-product"><img src="./assets/image/item_2.jpg" alt=""></div>
                                        <div class="product-info">
                                            <p class="name">Dưa hấu ruột đỏ Long An</p>
                                            <p style="color: #757575;">Đơn vị: <span class="mass">1kg</span></p>
                                        </div>
                                        <div class="purchase-info unit-price">Đơn giá: <span>35,000</span></div>
                                        <div class="purchase-info quantity">Số lượng: <span>1</span></div>
                                        <div class="purchase-info amount">Thành tiền: <span>35,000</span></div>
                                    </div>
                                    <div class="content-order">
                                        <div class="img-product"><img src="./assets/image/item_3.jpg" alt=""></div>
                                        <div class="product-info">
                                            <p class="name">Cá hồi tươi Fillet Na Uy</p>
                                            <p style="color: #757575;">Đơn vị: <span class="mass">200g</span></p>
                                        </div>
                                        <div class="purchase-info unit-price">Đơn giá: <span>128,000</span></div>
                                        <div class="purchase-info quantity">Số lượng: <span>1</span></div>
                                        <div class="purchase-info amount">Thành tiền: <span>128,000</span></div>
                                    </div>
                                    <p>Tổng tiền: <b><span class="total-order">163,000</span></b></p>
                                    <div class="footer-order">
                                        <a class="btn-shared order-info-btn" href="./ChiTietDonHang.html">Xem chi tiết</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <!-- Đơn hàng thất bại -->
                                <div class="cancel-order order-info mt-3">
                                    <div class="header-order">
                                        <span><i class="ti-home"></i> BriliFresh</span>
                                        <span><i class="ti-face-sad"></i> Đã hủy</span>
                                    </div>
                                    <div class="content-order">
                                        <div class="img-product"><img src="./assets/image/item_4.jpg" alt=""></div>
                                        <div class="product-info">
                                            <p class="name">Đậu cove Lâm Đồng</p>
                                            <p style="color: #757575;">Đơn vị: <span class="mass">500g</span></p>
                                        </div>
                                        <div class="purchase-info unit-price">Đơn giá: <span>18,000</span></div>
                                        <div class="purchase-info quantity">Số lượng: <span>100</span></div>
                                        <div class="purchase-info amount">Thành tiền: <span>18,000</span></div>
                                    </div>
                                    <p>Tổng tiền: <b><span class="total-order">18,000</span></b></p>
                                    <div class="footer-order">
                                        <a class="btn-shared order-info-btn" href="#">Xem chi tiết</a>
                                    </div>
                                </div>
                            }

                        }
                    }

                </div>
            </div>
        </div>
    </div>

    </div>
    <!-- End content -->
    @await Html.PartialAsync("~/Views/Shared/_FooterPartialView.cshtml")
    <script type="text/javascript" src="~/MyAccountAssets/MyAccount/SubNavSide.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
</body>
</html>