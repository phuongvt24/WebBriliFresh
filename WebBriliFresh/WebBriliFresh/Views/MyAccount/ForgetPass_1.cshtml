@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quên mật khẩu</title>

    <link rel="stylesheet" href="~/HomeAssets/asset/fonts/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/HomeAssets/asset/base.css" />
    <link rel="stylesheet" href="~/HomeAssets/homeheadermain.css" />
    <link rel="stylesheet" href="~/HomeAssets/HomeFooter.css" />
    <link rel="stylesheet" href="~/MyAccountAssets/MyAccount/MyAccountMain.css" />
    <link rel="stylesheet" href="~/MyAccountAssets/ForgetPass/ForgetPass.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css" integrity="sha512-17egcferpgzkcm0j0feq1ycjuyawdz9kutv1ejvuaoz8pdnh/0nzxmu6bbxwaaxqoi9pqxnrwqlcdb027hgv9a==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css" integrity="sha512-yhknp1/awr+yx26cb1y0cjvqumvea2pfzt1c9lls4prq5notzfwbhbig+x9g9eyw/8m0/4oxnx8pxj6z57x0dw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
</head>
<body>
    <!-- Begin header -->
    @await Html.PartialAsync("~/Views/Shared/_HomeHeaderPartialView_login.cshtml")
    <!-- End header -->
    <!-- Begin content -->
    <div class="container">
        <div class="row" id="AccountInfo">

            <section class="directory mt-3">
                <nav class="navbar navbar-expand-xl navbar-light ">
                    <div class="container-fluid">
                        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a href="#">Thông tin tài khoản</a></li>
                                <li class="breadcrumb-item"><a href="#">Đổi mật khẩu</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Đặt lại mật khẩu</li>
                            </ol>
                        </nav>
                    </div>
                </nav>
            </section>

            @await Html.PartialAsync("~/Views/Shared/_SubNavPartialView.cshtml")
            <!-- End SlideBar -->

            <div class="col-12 col-xl-9 container-right">


                <!-- PHẦN TRÊN LÀ PHẦN DÙNG CHUNG-->
                <!-- Phần riêng cho trang này -->
                <div class="heading-right">Đổi mật khẩu</div>
                <form asp-action="ForgotPassword" asp-controller="UserLogin" method="post" class="form-forgot-password" id="forgetPassForm">
                    <div class="form-return">
                        <a asp-controller="MyAccount"
                           asp-action="Evaluations"><i class="ti-arrow-left"></i></a>
                    </div>

                    <div class="form-header">Đặt lại mật khẩu</div>
                    <div class="form-body">
                        <p>Vui lòng chọn phương thức mà bạn muốn đặt lại mật khẩu:</p>
                        <div>
                            <a class="btn-shared" id="submitButton">
                                <i class="ti-email"></i>
                                <input type="text" id="email-input" value="@HttpContextAccessor.HttpContext.Session.GetString("CUS_SESSION_EMAIL")" hidden name="Email" />
                                Email <span id="email-input">@HttpContextAccessor.HttpContext.Session.GetString("CUS_SESSION_EMAIL")</span>
                                <a />
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/_FooterPartialView.cshtml")
    <script type="text/javascript" src="~/MyAccountAssets/MyAccount/SubNavSide.js"></script>
    <script>
        document.getElementById("submitButton").onclick = function () {
            document.getElementById("forgetPassForm").submit();
        }
    </script>
</body>
</html>